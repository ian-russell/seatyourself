<%= form_for([@restaurant, @reservation]) do |f| %>

  <div class="field">
    <%= f.label :date %>
    <%= f.date_select :date %>
  </div><br />
  <div class="field">
    <%= f.label :time %>
    <%= f.time_select :time%>
  </div><br />
  <div class="field">
    <%= f.label :party_size %>
    <%= f.number_field(:party_size, in: 1..15) %>
  </div><br />
  <div class="actions">
  <%= f.submit %>
  </div>

<% end %>
