<% if user_reservation_count == 1 %>
<h2>You Have <%= user_reservation_count %> Reservation</h2>
<% else %>
<h2>You Have <%= user_reservation_count %> Reservations</h2>
<% end %>

<% @reservations.where('user_id' => current_user.id).each do |r| %>
  <div class="reso_box">
  <h3><%= @restaurants.find(r.restaurant_id).name %></h3>
  <p>Date: <%= r.date %></p>
  <p>Time: <%= r.time.strftime("%I:%M:%p") %></p>
  <p>Party Size: <%= r.party_size %></p>
  <button>
  <%= link_to 'Cancel', "/reservations/#{r.id}", method: :delete %>
  </button>
  </div>
<% end %>
