<!DOCTYPE html>
<html>
<head>
  <title>Seatyourself</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <link href="https://fonts.googleapis.com/css?family=Lato" rel="stylesheet">
  <link rel="stylesheet" href="https://code.jquery.com/mobile/1.4.5/jquery.mobile-1.4.5.min.css">
  <script src="https://code.jquery.com/jquery-1.11.3.min.js"></script>
  <script src="https://code.jquery.com/mobile/1.4.5/jquery.mobile-1.4.5.min.js"></script>
  <%= csrf_meta_tags %>
</head>
<body>

<div data-role="main" class="ui-content">
  <p class="userinfo">
    <% if current_user %>
      Signed in as <%= current_user.email %><br /><br />
      <%= link_to "My Reservations (#{user_reservation_count})", reservations_path(current_user) %>
      |  <%= link_to "Restaurants (#{restaurant_count})", restaurants_path %>
      |  <%= link_to "Account Details", user_path(current_user) %>
      |  <%= link_to "Log Out", session_path("current_user"), :method => :delete %>
    <% else %>
      <%= link_to "Log in", new_session_path %> or <%= link_to "Sign up", new_user_path %>
      |  <%= link_to "Restaurants (#{restaurant_count})", restaurants_path %>
    <% end %>

    <% if flash[:alert] %>
          <p id="alert"><%= flash[:alert] %></p>
        <% end %>
  </p>
</div>

<div data-role="main" class="ui-content">
  <%= yield %>
</div>

</body>
</html>
