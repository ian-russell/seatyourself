<div>
  <h2><em><%= @restaurant.name %></em></h2>
  <p> Address: <%= @restaurant.address %><br />
      Phone#: <%= @restaurant.phone_number %><br />
      Cuisine: <%= @restaurant.cuisine_type %><br />
      Capacity: <%= @restaurant.capacity %></p>
</div>

<% if current_user %>
  <button>
    <h4><%= link_to "Make a Reservation", new_restaurant_reservation_path(@restaurant) %></h4>
  </button><br><br>
<% end %>

<button>
  <h4><%= link_to "Back to Restaurants", restaurants_path %></h4>
</button>
